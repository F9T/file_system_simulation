<Window x:Class="FileSystemSimulation.CreateFileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileSystemSimulation"
        xmlns:views="clr-namespace:FileSystemSimulation.Views"
        mc:Ignorable="d" WindowStartupLocation="CenterOwner"
        Title="Create file" Height="150" Width="200">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <views:FileView Grid.Row="0"/>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="Cancel" Click="Cancel_OnClick" Width="70" Height="25"/>
            <Button Content="Create" Click="Confirm_OnClick" Margin="5,0,0,0" Width="70" Height="25"/>
        </StackPanel>
    </Grid>
</Window>
